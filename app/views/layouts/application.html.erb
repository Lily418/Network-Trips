<!DOCTYPE html>
<html>
<head>
    <title>Network Trips</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= render "shared/form.js.erb" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag params[:controller] %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/themes/smoothness/jquery-ui.css" />

</head>
<body>
    <%= render '/layouts/messages' %>
    <div id='header-background'>
        <header>
            <h1><a href='/'>Network Trips</a></h1>
            <div id='user-actions'>
            <% if current_user.nil? %>

                <button id='user-signup' class='btn btn-primary'>Sign Up</button>
                <button id='user-login' class='btn btn-default'>Login</button>

            <% else %>
                <%= link_to "Log Out", "/sessions", method: "delete", class: "btn btn-default" %>
            <% end %>
        </div>
            <div style='clear:both' />
        </header>
    </div>

    <%= yield %>

    <footer>
        Contact Us - Network Trips is registered with companies house - <a href='/image_credits.html'>Image Credits</a>
    </footer>
</body>
</html>
