function show_login_modal(){
    $(".ui-dialog-content").dialog("close");
    $( login_form_string ).dialog({modal:true, title: "Login"});
    $( ".user-signup" ).click(show_signup_modal);
}

function show_signup_modal(){
    $(".ui-dialog-content").dialog("close");
    $( sign_up_form ).dialog({modal:true, title: "Sign Up"});
    $( ".user-login" ).click(show_login_modal);
}

function close_flash(){
    $( this ).parent().remove();
}


$( document ).ready(function(){
    $( ".user-login" ).click(show_login_modal);
    $( ".user-signup" ).click(show_signup_modal);
    $( ".close-flash" ).click(close_flash);
});
